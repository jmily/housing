{% extends 'base.html.twig' %}

 {% block stylesheets %}
     <link rel="stylesheet" href="{{ asset('css/app.css') }}">
     <link rel="stylesheet" href="{{ asset('css/sweetalert.css') }}">
 {% endblock %}

{% block body %}

    <div class="admin-wrapper">

        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <span class="logo"></span>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div class="navbar-right">
                    <div class="nav-social">
                        <a href="https://github.com/jmily/interview" target="_blank"> <i class="fa fa-2x fa-github-square"></i></a>
                        <a href="https://au.linkedin.com/in/jweiyi" target="_blank"> <i class="fa fa-2x fa-linkedin-square"></i></a>
                    </div>
                </div>
            </div>
        </nav>



        <div class="container-fluid">
            <div class="row" >
                <div class="hidden-sm col-sm-3 col-md-2 sidebar">
                    <div class="log">
                        <img class="admin-logo" src="{{ asset('images/symfony_white_03.png') }}">
                    </div>
                    <ul class="nav nav-sidebar">
                        <li {% if app.request.get('_route') == 'admin_index' %} class="active"{% endif %}>
                            <a href="{{ path('homepage') }}">
                                <i class="fa fa-users"></i>
                                Students/Allocations<span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                </div>

                <div class="col-sm-12 col-md-10 col-md-offset-2 main">
                    {% block content %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}


 {% block javascripts %}
     <script src="{{ asset('js/sweetalert.min.js') }}"></script>
     <script src="{{ asset('js/admin.js') }}"></script>
 {% endblock %}